        formatFreshness(timestamp) {
            let diff = Math.floor((this.currentTime - timestamp) / 1000);
            if (diff < 60) return diff + 's ago';
            return Math.floor(diff / 60) + 'm ' + (diff % 60) + 's ago';
        },
        init() { 
